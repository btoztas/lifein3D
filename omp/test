		echo "Parallel:";
		time ./life3d tests/s200e50k.in 1000 > our.s200e50k.1000.out;
		diff our.s200e50k.1000.out tests/s200e50k.1000.out;
		echo "";
		echo "";
		echo "Running: s500e300k 2000 iter";
		if [ "$2" = "-s" ]; then
			echo "Sequential:";
			time ./../sequential/life3d tests/s500e300k.in 2000 > /dev/null;
		fi
		echo "Parallel:";

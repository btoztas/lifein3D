#!/bin/bash

rm our.*

case "$1" in
	"5")
		echo "";
		echo "Running: s5e50 10 iter";
		if [ "$2" = "-s" ]; then
			echo "Sequential:";
			time ./../sequential/life3d tests/s5e50.in 10 > /dev/null;
		fi
		echo "Parallel:";
		time ./life3d tests/s5e50.in 10 > our.s5e50.10.out;
		diff our.s5e50.10.out tests/s5e50.10.out;
		;;

	"20")
		echo "";
		echo "Running: s20e400 500 iter";
		if [ "$2" = "-s" ]; then
			echo "Sequential:";
			time ./../sequential/life3d tests/s20e400.in 500 > /dev/null;
		fi
		echo "Parallel:";
		time ./life3d tests/s20e400.in 500 > our.s20e400.500.out;
		diff our.s20e400.500.out tests/s20e400.500.out;
		;;

	"50")
		echo "";
		echo "Running: s50e5k 300 iter";
		if [ "$2" = "-s" ]; then
			echo "Sequential:";
			time ./../sequential/life3d tests/s50e5k.in 300 > /dev/null;
